<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/phoneNumberLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".EnterNumberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RGB_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/vector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="51dp"
            android:text="Customer"
            android:textColor="@color/RGB_blue"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RGB_white"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="178dp"
            android:width="210dp"
            android:height="68dp"
            android:text="Enter your phone number"
            android:textColor="@color/RGB_black"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="51dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@color/RGB_white"
            android:backgroundTint="@color/RGB_Gray1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_flag"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/az">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="19dp"
                android:text="  +994 "
                android:textColor="@color/RGB_black">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers"
            android:layout_width="253dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@color/RGB_white"
            android:backgroundTint="@color/RGB_Gray1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phoneEdit"
                android:layout_width="222dp"
                android:layout_height="35dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:background="@color/RGB_Gray1"
                android:text="Your number"
                android:textColor="@color/RGB_Gray2"
                android:textSize="20dp">

            </EditText>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enterNumber"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/bgn_bluebutton"
        android:text="Send otp Code"
        android:textAlignment="center"
        android:textColor="@color/RGB_white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>









    <LinearLayout
        android:id="@+id/codeLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="51dp"
                android:background="@drawable/vector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="51dp"
                android:text="Customer"
                android:textColor="@color/RGB_blue"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:layout_marginTop="20dp"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="309dp"
                android:layout_height="81dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="178dp"
                android:width="210dp"
                android:height="68dp"
                android:text="Enter
            verification number"
                android:textColor="@color/RGB_black"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="317dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:text="Code sent to number +994 44 220 00 01"
            android:textColor="@color/RGB_black"
            android:textStyle="bold"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputCode1"
                    android:layout_width="60dp"
                    android:layout_height="56dp"
                    android:background="@drawable/backgroundgray"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/RGB_blue"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            <EditText
                android:id="@+id/inputCode2"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:background="@drawable/backgroundgray"
                android:layout_marginRight="4dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/inputCode3"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:background="@drawable/backgroundgray"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/inputCode4"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:background="@drawable/backgroundgray"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/inputCode5"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:background="@drawable/backgroundgray"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@id/inputCode6"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_enterCode1"
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="303dp"
            android:background="@drawable/bgn_bluebutton"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/RGB_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>