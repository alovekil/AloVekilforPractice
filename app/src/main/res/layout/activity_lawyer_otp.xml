<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/RGB_white"
    tools:context=".LawyerOtpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/RGB_white">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/phoneLawyerLl"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RGB_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_chooseFieldActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/vector" />

        <TextView
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="51dp"
            android:text="Lawyer"
            android:textColor="@color/RGB_blue"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="202dp"
        android:layout_height="68dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="178dp"
        android:gravity="center_vertical"
        android:text="Enter your
                phone number"
        android:textColor="@color/RGB_black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="51dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:background="@drawable/backgroundgrayboxwords"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/az"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/RGB_black"
                android:text="+994"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/backgroundgrayboxwords"
            android:layout_marginLeft="5dp">
            <EditText
                android:id="@+id/phoneNumberLawyer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@color/RGB_Gray1"
                android:textColor="@color/RGB_black"
                android:textColorHint="@color/RGB_black"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="Your Number"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sendLwyOtp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="303dp"
        android:background="@drawable/bgn_bluebutton"
        android:text="Send code"
        android:textAlignment="center"
        android:textColor="@color/RGB_white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/otpLawyerLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="51dp"
                android:text="Lawyer"
                android:textColor="@color/RGB_blue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="234dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="178dp"
            android:gravity="center_vertical"
            android:text="Enter
                verification code"
            android:textColor="@color/RGB_black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberDescription"
            android:layout_width="349dp"
            android:layout_height="19dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="Code sent to number +994 44 220 00 01"
            android:textColor="@color/RGB_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputLwyCode1"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputLwyCode2"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputLwyCode3"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputLwyCode4"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputLwyCode5"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputLwyCode6"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nextLwyRegister"
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="303dp"
            android:background="@drawable/bgn_bluebutton"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/RGB_white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>