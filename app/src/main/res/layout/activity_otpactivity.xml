<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OTPActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RGB_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/vector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="51dp"
            android:text="Customer"
            android:textColor="@color/RGB_blue"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="20dp"
        android:background="@color/RGB_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="309dp"
            android:layout_height="81dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="178dp"
            android:width="210dp"
            android:height="68dp"
            android:text="Enter
            verification number"
            android:textColor="@color/RGB_black"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:text="Code sent to number +994 44 220 00 01"
        android:textColor="@color/RGB_black"
        android:textStyle="bold"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backgroundgray">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/backgroundgray"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backgroundgray">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/backgroundgray"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backgroundgray">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/backgroundgray"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backgroundgray">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/backgroundgray"
                android:textColor="@color/RGB_blue"
                android:textSize="22dp"
                android:textStyle="bold">

            </EditText>
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/bgn_bluebutton"
        android:text="Send otp Code"
        android:textAlignment="center"
        android:textColor="@color/RGB_white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>