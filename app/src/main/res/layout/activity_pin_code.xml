<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcometomessage"
            android:layout_width="288dp"
            android:layout_height="118dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Welcome To!"
            android:textColor="@color/RGB_black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/fonts" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/alovekillogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="426dp"
            android:background="@drawable/circlelayout"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="100dp"
            android:paddingBottom="190dp">

            <TextView
                android:id="@+id/pincodetxt"
                android:layout_width="183dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="PIN-Code"
                android:textColor="@color/RGB_white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/fonts" />

            <LinearLayout
                android:layout_width="225dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="113dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="306dp"
                android:layout_height="238dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/RGB_blue"
                    android:text="1"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button1"
                    android:background="@color/RGB_blue"
                    android:text="2"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button2"
                    android:background="@color/RGB_blue"
                    android:text="3"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/RGB_blue"
                    android:text="4"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button2"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button4"
                    android:background="@color/RGB_blue"
                    android:text="5"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button3"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button5"
                    android:background="@color/RGB_blue"
                    android:text="6"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/RGB_blue"
                    android:text="7"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button5"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button7"
                    android:background="@color/RGB_blue"
                    android:text="8"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button6"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button8"
                    android:background="@color/RGB_blue"
                    android:text="9"
                    android:textColor="@color/RGB_white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="133dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="173dp"
                    android:layout_marginBottom="29dp"
                    android:background="@color/RGB_blue"
                    android:text="@string/cancel"
                    android:textColor="@color/RGB_white"
                    android:textSize="20sp"
                    android:visibility="visible"
                    tools:visibility="visible" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="398dp"
                android:layout_height="53dp"
                android:layout_marginLeft="44dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textColor="@color/RGB_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@color/RGB_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textColor="@color/RGB_white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="398dp"
                android:layout_height="53dp"
                android:layout_marginLeft="44dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textColor="@color/RGB_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@color/RGB_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textColor="@color/RGB_white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="398dp"
                android:layout_height="53dp"
                android:layout_marginLeft="44dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textColor="@color/RGB_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@color/RGB_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textColor="@color/RGB_white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


