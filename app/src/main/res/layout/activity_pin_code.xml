<?xml version="1.0" encoding="utf-8"?>

<layout     xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

<androidx.constraintlayout.widget.ConstraintLayout

    android:orientation="vertical"
    android:background="@color/RGB_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PinCode.PinCodeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/RGB_white"
        android:layout_margin="2dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:background="@color/RGB_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="164.46dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/logo1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="134dp"
        android:gravity="center"
        android:background="@color/RGB_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="141dp"
            android:layout_marginRight="141dp"
            android:text="PIN-CODE"
            android:textColor="@color/RGB_black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/EnterFirstPinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="30dp"
            android:id="@+id/circle1"
            android:buttonTint="@color/RGB_blue"
            android:layout_height="19dp"
            android:textColor="@color/RGB_blue"
             />

        <RadioButton
            android:buttonTint="@color/RGB_blue"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:id="@+id/circle2"
            android:layout_marginStart="24dp"

             />

        <RadioButton
            android:buttonTint="@color/RGB_blue"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:id="@+id/circle3"
            android:layout_marginStart="24dp"
             />

        <RadioButton
            android:buttonTint="@color/RGB_blue"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:id="@+id/circle4"
            android:layout_marginStart="24dp"
             />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pincdelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:background="@drawable/bgn_blue_screen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36.83dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number3"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="66dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number4"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number5"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number6"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="66dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number7"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number8"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number9"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="66dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="33.25dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/RGB_white"
                android:textSize="30sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/number0"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/deletenumbers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:src="@drawable/vector2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="@color/RGB_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/accesCode"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="21dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/forgettheaccescode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:text="Forget the access code?"
                android:textColor="@color/RGB_black"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/useTouchid"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/iconoirfingerid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:text="Use touch ID to login"
                android:textColor="@color/RGB_black"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

