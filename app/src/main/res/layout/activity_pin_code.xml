<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcometomessage"
            android:layout_width="288dp"
            android:layout_height="118dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Welcome To!"
            android:textColor="@color/RGB_black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/fonts" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/alovekillogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:background="@drawable/circlelayout"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="100dp"
            android:paddingBottom="190dp">

            <TextView
                android:id="@+id/pincodetxt"
                android:layout_width="183dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginLeft="75dp"
                android:layout_marginBottom="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="PIN-Code"
                android:textColor="@color/RGB_white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/fonts" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="113dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


