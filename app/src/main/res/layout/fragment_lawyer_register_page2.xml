<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/RGB_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/RGB_white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/moveBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/vector" />

        <TextView
            android:layout_width="86dp"
            android:layout_height="22dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="51dp"
            android:text="Lawyer"
            android:textColor="@color/RGB_blue"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/backgroundgrayboxwords"
        android:layout_marginTop="24.93dp">
        <EditText
            android:layout_width="270dp"
            android:layout_height="22dp"
            android:textSize="18sp"
            android:background="@color/RGB_Gray1"
            android:hint="Lawyer Certificate"
            android:textColorHint="@color/RGB_Gray2"
            android:textColor="@color/RGB_black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"/>
        <ImageView
            android:id="@+id/uploadCertificate"
            android:layout_width="18.82dp"
            android:layout_height="20dp"
            android:background="@drawable/upload"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgroundgrayboxwords">

        <TextView
            android:id="@+id/tv_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="17dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:hint="Service Languages"
            android:textColor="@color/RGB_black"
            android:textColorHint="@color/RGB_Gray2"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgroundgrayboxwords">

        <TextView
            android:id="@+id/tv_areas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:hint="Service Areas"
            android:textColorHint="@color/RGB_Gray2"
            android:textSize="18sp"
            android:layout_marginRight="17dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/backgroundgrayboxwords"
        android:layout_marginTop="16dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="18sp"
            android:background="@color/RGB_Gray1"
            android:hint="Tax id"
            android:inputType="textPersonName"
            android:textColorHint="@color/RGB_Gray2"
            android:textColor="@color/RGB_black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/backgroundgrayboxwords"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="18sp"
            android:background="@color/RGB_Gray1"
            android:hint="Legal experience year"
            android:inputType="textPersonName"
            android:textColorHint="@color/RGB_Gray2"
            android:textColor="@color/RGB_black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/backgroundgrayboxwords"
        android:layout_marginTop="16dp">
        <EditText
            android:layout_width="270dp"
            android:layout_height="22dp"
            android:textSize="18sp"
            android:background="@color/RGB_Gray1"
            android:hint="Diploma"
            android:inputType="textPersonName"
            android:textColorHint="@color/RGB_Gray2"
            android:textColor="@color/RGB_black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"/>
        <ImageView
            android:id="@+id/uploaddiploma"
            android:layout_width="18.82dp"
            android:layout_height="20dp"
            android:background="@drawable/upload"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/backgroundgrayboxwords"
        android:layout_marginTop="16dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="18sp"
            android:background="@color/RGB_Gray1"
            android:hint="Lawyer experience year"
            android:inputType="textPersonName"
            android:textColorHint="@color/RGB_Gray2"
            android:textColor="@color/RGB_black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="39.03dp"
        android:layout_height="10.51dp"
        android:orientation="horizontal"
        android:background="@color/RGB_white"
        android:layout_marginTop="127.56dp"
        android:layout_marginLeft="190dp">
        <ImageView
            android:layout_width="10.51dp"
            android:layout_height="10.51dp"
            android:background="@drawable/boxwhite"/>
        <ImageView
            android:layout_width="10.51dp"
            android:layout_height="10.51dp"
            android:background="@drawable/boxblue"
            android:layout_marginLeft="18.02dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bgn_bluebutton"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="@color/RGB_white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>