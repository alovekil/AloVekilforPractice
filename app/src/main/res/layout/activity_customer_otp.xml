<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/RGB_white"
    tools:context=".CustomerOtpActivity">


    <ImageView
        android:id="@+id/back_signupcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="38.34dp"
        android:background="@drawable/vector"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_numberCustomerHighlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33.34dp"
        android:layout_marginEnd="40dp"
        android:text="Customer"
        android:textColor="@color/RGB_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toEndOf="@+id/back_signupcustomer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enteryourphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="51dp"
        android:gravity="center_vertical"
        android:text="Enter your
                             phone number"
        android:textColor="@color/RGB_black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/ll_NumberArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/ll_NumberArea"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="308dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_sendCstmOtp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:background="@drawable/backgroundgrayboxwords"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/az" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:text="+994"
                android:textColor="@color/RGB_black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/backgroundgrayboxwords">

            <EditText
                android:id="@+id/phoneNumberCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@color/RGB_Gray1"
                android:hint="Your Number"
                android:inputType="number"
                android:textColor="@color/RGB_black"
                android:textColorHint="@color/RGB_black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sendCstmOtp"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bgn_bluebutton"
        android:text="Get code"
        android:textAlignment="center"
        android:textColor="@color/RGB_white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_otpcustomerHighlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33.34dp"
        android:text="Customer"
        android:textColor="@color/RGB_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_enterverificationcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical"
        android:text="Enter verification
                  code"
        android:textColor="@color/RGB_black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/numberCustomerDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/numberCustomerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:text="Code sent to number +994 44 220 00 01"
        android:textColor="@color/RGB_black"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ll_otpArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_otpArea"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="302dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_nextCstmRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/inputCstmCode1"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/backgroundgray"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/RGB_blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputCstmCode2"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/backgroundgray"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/RGB_blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputCstmCode3"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/backgroundgray"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/RGB_blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputCstmCode4"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/backgroundgray"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/RGB_blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputCstmCode5"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/backgroundgray"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/RGB_blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputCstmCode6"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/backgroundgray"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/RGB_blue"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_nextCstmRegister"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/bgn_bluebutton"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/RGB_white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>