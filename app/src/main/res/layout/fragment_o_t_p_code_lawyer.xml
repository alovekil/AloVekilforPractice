<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:text="A six-digit code has been
            sent to your number"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backgroundbox"
            android:inputType="number"
            android:textColor="@color/RGB_black"
            android:textSize="24sp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:textStyle="bold"
            android:imeOptions="actionNext"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:textColor="@color/RGB_black"
            android:textSize="24sp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:textStyle="bold"
            android:imeOptions="actionNext"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:textColor="@color/RGB_black"
            android:textSize="24sp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:background="@drawable/backgroundbox"
            android:textStyle="bold"
            android:imeOptions="actionNext"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:textColor="@color/RGB_black"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/backgroundbox"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:textStyle="bold"
            android:imeOptions="actionNext"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backgroundbox"
            android:inputType="number"
            android:textColor="@color/RGB_black"
            android:textSize="24sp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:textStyle="bold"
            android:imeOptions="actionNext"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:textColor="@color/RGB_black"
            android:background="@drawable/backgroundbox"
            android:textSize="24sp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:textStyle="bold"
            android:imeOptions="actionDone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RGB_black"
            android:textSize="16sp"
            android:text="@string/didn_t_receive_the_otp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textResendOTP"
            android:layout_marginStart="8dp"
            android:text="@string/resend_otp"
            android:textColor="@color/RGB_yellow"
            android:textStyle="bold"
            android:textSize="16sp"
            />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enterCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bgn_enter"
        android:text="Next"
        android:textColor="@color/RGB_white" />

</LinearLayout>