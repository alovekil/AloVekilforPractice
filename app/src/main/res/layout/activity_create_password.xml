<?xml version="1.0" encoding="utf-8"?>



        <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/RGB_white">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="164.46dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Pin_CodeText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:text="PIN-CODE"
        android:textColor="@color/RGB_black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <LinearLayout
        android:id="@+id/EnterFirstPinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pin_CodeText">

        <RadioButton
            android:id="@+id/circle1"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"
            android:textColor="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle2"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"

            />

        <RadioButton
            android:id="@+id/circle3"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle4"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/EnterConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterFirstPinCode">

        <RadioButton
            android:id="@+id/circle5"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"
            android:textColor="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle6"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"

            />

        <RadioButton
            android:id="@+id/circle7"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle8"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pincdelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:background="@drawable/bgn_blue_screen"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterConfirmPassword">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number3"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="66dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number4"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number5"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number6"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number7"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number8"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number9"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/RGB_white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number0"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/deletenumbers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:src="@drawable/vector2" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@color/RGB_white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/accesCode"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="21dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/forgettheaccescode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:text="Forget the access code?"
                android:textColor="@color/RGB_black"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/useTouchid"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:background="@color/RGB_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/iconoirfingerid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:text="Use touch ID to login"
                android:textColor="@color/RGB_black"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

