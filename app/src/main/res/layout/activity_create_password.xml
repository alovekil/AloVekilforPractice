<?xml version="1.0" encoding="utf-8"?>



        <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/RGB_white">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="164.46dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Pin_CodeText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:text="PIN-CODE"
        android:textColor="@color/RGB_black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <LinearLayout
        android:id="@+id/EnterFirstPinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pin_CodeText">

        <RadioButton
            android:id="@+id/circle1"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"
            android:textColor="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle2"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"

            />

        <RadioButton
            android:id="@+id/circle3"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle4"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/EnterConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/pincdelayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterFirstPinCode"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/circle5"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"
            android:textColor="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle6"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue"

            />

        <RadioButton
            android:id="@+id/circle7"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />

        <RadioButton
            android:id="@+id/circle8"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:buttonTint="@color/RGB_blue" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/pincdelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/RGB_blue"
        app:cardCornerRadius="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/RGB_blue">

            <TextView
                android:id="@+id/number1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"

                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/number2"
                app:layout_constraintStart_toEndOf="@+id/number6" />
                <!--app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
-->

            <TextView
                android:id="@+id/number2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/number3"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.754"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/number4"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="228dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.147"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/number5"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="228dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.398"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/number6"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="280dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.791"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/number7"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="316dp"
                android:layout_marginBottom="152dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/number8"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="228dp"
                android:layout_marginBottom="176dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/number9"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="144dp"
                android:layout_marginBottom="132dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/cancelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="280dp"
                android:layout_marginBottom="68dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/RGB_white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/number0"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="216dp"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/RGB_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/deletenumbers"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="56dp"
                android:gravity="center"
                android:src="@drawable/vector2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

