<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/RGB_white"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Areas"
        android:textStyle="bold"
        android:textColor="@color/RGB_black"
        android:textSize="26sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:id="@+id/area_rcyvw"/>
    <RelativeLayout
        android:translationZ="1dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_clearAllAreas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear all"
            android:textColor="@color/RGB_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_OkAreas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:text="OK"
            android:textColor="@color/RGB_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_cancelAreas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/tv_OkAreas"
            android:text="Cancel"
            android:textColor="@color/RGB_black"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>